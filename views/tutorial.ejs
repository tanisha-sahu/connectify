<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Tutorial Modal</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <style>
      .modal{
        overflow: hidden;
        background-color: #ffffff;
      }
      .modal-content{
        min-height: 95vh;
      }
      /* Modal Styles */
      .modal-content {
        border-radius: 15px;
        overflow: hidden;
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.2);
      }

      .animated-modal {
        animation: fadeIn 0.5s ease-in-out;
      }

      .tutorial-img {
        max-width: 500px;
        height: auto;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.15);
      }

      .modal-header {
        border-bottom: none;
        background-color: #f8f9fa;
      }

      .modal-footer {
        border-top: none;
      }

      .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
        font-weight: 600;
      }

      .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
        font-weight: 600;
      }

      /* Animations */
      @keyframes fadeIn {
        from {
          opacity: 0;
          transform: translateY(-50px);
        }
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }

      /* Responsive Design */
      @media (max-width: 768px) {
        .tutorial-img {
          max-width: 100%;
        }
        .modal-content{
        min-height: 70vh;
      }
      }
    </style>
  </head>
  <body>
    <!-- Modal -->
    <div
      class="modal fade"
      id="tutorialModal"
      tabindex="-1"
      aria-labelledby="tutorialModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content animated-modal">
          <div class="modal-header">
            <h5
              class="modal-title fw-bold text-primary"
              id="tutorialModalLabel"
            >
              Welcome to Our Social Media App
            </h5>
          </div>
          <div class="modal-body">
            <!-- Carousel -->
            <div
              id="tutorialCarousel"
              class="carousel slide"
              data-bs-interval="false"
            >
              <div class="carousel-inner">
                <!-- Slide 1 -->
                <div class="carousel-item active text-center">
                  <img
                    src="/uploads/1.png"
                    class="tutorial-img"
                    alt="Step 1"
                  />
                  <h5 class="mt-3">Step 1: Getting Started</h5>
                  <p class="text-muted">
                    Learn how to begin using the app effectively.
                  </p>
                </div>
                <!-- Slide 2 -->
                <div class="carousel-item text-center">
                  <img
                    src="../uploads/2.png"
                    class="tutorial-img"
                    alt="Step 2"
                  />
                  <h5 class="mt-3">Step 2: Create Post</h5>
                  <p class="text-muted">
                    You can post anything by clicking on 'Create Post' in the navbar.
                  </p>
                </div>
                <!-- Slide 3 -->
                <div class="carousel-item text-center">
                  <img
                    src="../uploads/3.png"
                    class="tutorial-img"
                    alt="Step 3"
                  />
                  <h5 class="mt-3">Step 3: Connect with People</h5>
                  <p class="text-muted">
                    You can connect with people from around the world in the navbar.
                  </p>
                </div>
                <!-- Slide 4 -->
                <div class="carousel-item text-center">
                  <img
                    src="../uploads/4.png"
                    class="tutorial-img"
                    alt="Step 3"
                  />
                  <h5 class="mt-3">Step 4: Customize Your Profile</h5>
                  <p class="text-muted">
                    You have an option at the top right of your profile to edit your profile. 
                  </p>
                </div>
                <!-- Slide 5 -->
                <div class="carousel-item text-center">
                  <img
                    src="../uploads/5.png"
                    class="tutorial-img"
                    alt="Step 3"
                  />
                  <h5 class="mt-3">Step 5: Comment your thoughts.</h5>
                  <p class="text-muted">
                    Share your opinion on others' posts.
                  </p>
                </div>
              </div>
              <!-- Controls -->
              <button
                class="carousel-control-prev"
                type="button"
                data-bs-target="#tutorialCarousel"
                data-bs-slide="prev"
              >
                <span
                  class="carousel-control-prev-icon"
                  aria-hidden="true"
                ></span>
                <span class="visually-hidden">Previous</span>
              </button>
              <button
                class="carousel-control-next"
                type="button"
                data-bs-target="#tutorialCarousel"
                data-bs-slide="next"
              >
                <span
                  class="carousel-control-next-icon"
                  aria-hidden="true"
                ></span>
                <span class="visually-hidden">Next</span>
              </button>
            </div>
          </div>
          <div class="modal-footer justify-content-between">
            <a
              href="/blog/blogs"
              type="button"
              class="btn btn-success px-4"
            >
            Get Started
          </a>
            <button
              id="nextButton"
              type="button"
              class="btn btn-primary px-4"
              data-bs-target="#tutorialCarousel"
              data-bs-slide="next"
            >
              Next
            </button>
          </div>
        </div>
      </div>
    </div>

    <!-- Bootstrap JS and Custom Script -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script>
      document.addEventListener("DOMContentLoaded", function () {
    const tutorialModal = new bootstrap.Modal(
      document.getElementById("tutorialModal"),
      {
        backdrop: 'static', // Prevent modal close when clicking outside
        keyboard: false // Prevent modal close when pressing Esc key
      }
    );
    tutorialModal.show();
  });
    </script>
  </body>
</html>
